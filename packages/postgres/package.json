{
  "name": "@plopslop/postgres",
  "version": "0.1.0",
  "description": "PlopSlop driver for PostgreSQL using LISTEN/NOTIFY",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "pubsub",
    "postgres",
    "postgresql",
    "listen-notify",
    "realtime",
    "messaging",
    "typescript",
    "plopslop"
  ],
  "author": "Philipp Dyck <pdyck@posteo.de>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pdyck/plopslop.git",
    "directory": "packages/postgres"
  },
  "homepage": "https://github.com/pdyck/plopslop#readme",
  "bugs": {
    "url": "https://github.com/pdyck/plopslop/issues"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run"
  },
  "peerDependencies": {
    "@plopslop/core": "workspace:*",
    "pg": "catalog:"
  },
  "devDependencies": {
    "@types/node": "^24.7.0",
    "@types/pg": "catalog:",
    "typescript": "catalog:",
    "vite-tsconfig-paths": "catalog:",
    "vitest": "catalog:"
  }
}
