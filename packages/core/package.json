{
  "name": "@plopslop/core",
  "version": "1.0.0",
  "description": "Type-safe ephemeral pub/sub with multiple drivers",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "pubsub",
    "typescript",
    "realtime",
    "messaging",
    "event-emitter",
    "zod"
  ],
  "author": "Philipp Dyck <pdyck@posteo.de>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pdyck/plopslop.git",
    "directory": "packages/core"
  },
  "homepage": "https://github.com/pdyck/plopslop#readme",
  "bugs": {
    "url": "https://github.com/pdyck/plopslop/issues"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run"
  },
  "devDependencies": {
    "@types/node": "^24.7.0",
    "typescript": "catalog:",
    "vite-tsconfig-paths": "catalog:",
    "vitest": "catalog:"
  },
  "dependencies": {
    "zod": "catalog:"
  }
}
